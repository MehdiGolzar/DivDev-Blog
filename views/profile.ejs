<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        crossorigin="anonymous" />
    <!-- my css -->
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <!-- Form container -->
        <div class="form-container p-4 col-12 col-sm-8 col-lg-6 position-relative">

            <!-- Avatar -->
            <div class="mb-3 field" id="avatar-container">
                <i class="fas fa-minus h6 text-danger d-none btn" id="deleteAvatarBtn"></i>
                <img id="avatarPreview" src="/images/avatars/<%= avatar %>">
                <input type="file" name="avatar" class="d-none" id="avatarInput" disabled />
                <i class="fas fa-plus h6 text-success d-none btn" id="selectAvatarBtn"></i>
            </div>
            
            <!-- form alert -->
            <div id="alert" class="mb-3 mt-3 text-center h6"></div>

            <form id="form">

                <!-- Username Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="username">Username</label>
                    <input class="text-light" type="text" name="username" id="username" userId="<%= id %>" placeholder="Username"
                        value="<%= username %>" disabled />
                </div>

                <!-- First Name Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="firstName">First name</label>
                    <input class="text-light" type="text" name="firstName" id="firstName" autocomplete="off" placeholder="First Name"
                        value="<%= firstName %>" disabled />
                </div>

                <!-- Last Name Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="lastName">Last name</label>
                    <input class="text-light" type="text" name="lastName" id="lastName" placeholder="Last Name"
                        value="<%= lastName %>" disabled />
                </div>

                <!-- Email Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="phoneNumber">Email</label>
                    <input class="text-light" type="text" name="email" id="email" placeholder="Email"
                        value="<%= email %>" disabled />
                </div>

                <!-- Phone Number Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="phoneNumber">Phone number</label>
                    <input class="text-light" type="text" name="phoneNumber" id="phoneNumber" placeholder="Phone Number"
                        value="<%= phoneNumber %>" disabled />
                </div>

                <!-- Gender Select -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="gender">Gender</label>
                    <select class="form-select mb-3" id="gender" aria-label="Default select example" style="width: 45%;"
                        disabled>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="buttons">
                    <button id="logoutBtn" class="btn btn-secondary mb-2">Logout</button>
                    <button type="submit" id="editBtn" class="btn btn-warning mb-2">Edit</button>
                </div>

            </form>

            <div class="position-absolute top-0 start-0 p-2">
               <a href="#" class="text-decoration-none text-light h4"  onclick="history.back();">
                <i class="fas fa-arrow-left"></i>
               </a>
            </div>

        </div>
    </div>
    <script src="/javascripts/profile.js"></script>
</body>

</html>