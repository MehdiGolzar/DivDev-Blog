    <div class="card mt-3">
        <div class="card-body p-5">
            <div class="row mt-2 justify-content-center mb-2">
                <div class="cardImage-container text-center" id="imageContainer">
                    <img src="/articles/<%=  article.image  %>" alt="..." id="articleImage">
                </div>
            </div>
            <div class="row justify-content-center text-center p-3" id="titleContainer">
                <h3 class="card-title" id="articleTitle"><%= article.title %></h3>
            </div>
            <di class="row" id="contentContainer">
                <div class="card-text text-light fs-5 lh-base text-align text-wrap" id="articleContent">
                    <%= article.content %></div>
            </di>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <footer class="d-flex flex-grow align-items-center mb-3">
                <a href="#" class="text-decoration-none">
                    <div class="avatar">
                        <img src="/images/avatars/<%=  article.author.avatar  %>" alt="..." class="img-fluid">
                    </div>
                </a>
                <div class="author me-3">
                    <span class="h4"><%= article.author.firstName %> <%= article.author.lastName %></span>
                </div>
                <div class="date h5 d-flex pt-3"><i class="icon-clock"></i><%= article.createdAt %> </div>
                <div class="comments meta-last h5 d-flex pt-3"><i class="icon-comment"></i>12</div>
            </footer>
            <button class="btn btn-warning px-5 py-2" id="editArticleBtn" articleId="<%= article.id %>"
                data-bs-toggle="modal" data-bs-target="#editArticleModal">Edit</button>
        </div>

        <!-- Comment -->

        <div class="container mt-2 mb-5">
            <div class="row height d-flex justify-content-center align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="p-3">
                            <h4>Comments</h4>
                        </div>
                        <div class="mt-1 d-flex flex-row align-items-center p-3 form-color">
                            <img src="/images/avatars/<%=  article.author.avatar  %>" width="50"
                                class="rounded-circle mr-2">
                            <input type="text" class="form-control text-light" placeholder="Enter your comment..." id="commentInput">
                        </div>
                        <div class="mt-2">
                            <div class="d-flex flex-row p-3"> <img src="https://i.imgur.com/zQZSWrt.jpg" width="40"
                                    height="40" class="rounded-circle mr-3">
                                <div class="w-100">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex flex-row align-items-center"> <span class="mr-2">Brian
                                                selter</span>
                                            <small class="c-badge">Top Comment</small> </div> <small>12h ago</small>
                                    </div>
                                    <p class="text-justify comment-text mb-0">Lorem ipsum dolor sit amet, consectetur
                                        adipiscing
                                        elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim
                                        ad
                                        minim veniam</p>
                                    <div class="d-flex flex-row user-feed"> <span class="wish"><i
                                                class="fa fa-heartbeat mr-2"></i>24</span> <span class="ml-3"><i
                                                class="fa fa-comments-o mr-2"></i>Reply</span> </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>