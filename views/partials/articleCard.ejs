    <div class="card mt-3">
        <div class="card-body p-5">
            <div class="row justify-content-center mt-2 mb-2">
                <img src="/articles/<%=  article.image  %>" class="card-img-top img-fluid" alt="..." id="articleImage">
            </div>
            <div class="row justify-content-center text-center p-3">
                <h3 class="card-title"><%= article.title %> </h3>
            </div>
            <di class="row">
                <div class="card-text text-light fs-5 lh-base text-align text-wrap"><%= article.content %></div>
            </di>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <footer class="d-flex flex-grow align-items-center mb-3">
                <a href="#" class="text-decoration-none">
                    <div class="avatar"><img src="/images/avatars/<%=  article.author.avatar  %>" alt="..."
                            class="img-fluid"></div>
                </a>
                <div class="author me-3">
                    <span class="h4"><%= article.author.firstName %> <%= article.author.lastName %></span>
                </div>
                <div class="date h5 d-flex pt-3"><i class="icon-clock"></i><%= article.createdAt %> </div>
                <div class="comments meta-last h5 d-flex pt-3"><i class="icon-comment"></i>12</div>
            </footer>
        </div>
    </div>