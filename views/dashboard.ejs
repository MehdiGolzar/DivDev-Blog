<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        crossorigin="anonymous" />
    <!-- my css -->
    <link rel="stylesheet" href="/styles/dashboard.css">
</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <div class="form-container p-4 col-12 col-sm-8 col-lg-6">

            <form id="form" action="/blogger/update" method="put">

                <!-- form title -->
                <div class="mb-4 text-light text-center title">Dashboard</div>

                <!-- form alert -->
                <div id="alert" class="mb-4 text-light text-center"><%= msg %></div>

                <!-- Username Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="username">Username</label>
                    <input class="text-light" type="text" name="username" id="username" placeholder="Username"
                        value="<%= username %>" disabled />
                </div>

                <!-- First Name Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="firstName">First name</label>
                    <input class="text-light" type="text" name="firstName" id="firstName" placeholder="First Name"
                        value="<%= firstName %>" disabled />
                </div>

                <!-- Last Name Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="lastName">Last name</label>
                    <input class="text-light" type="text" name="lastName" id="lastName" placeholder="Last Name"
                        value="<%= lastName %>" disabled />
                </div>

                <!-- Email Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="phoneNumber">Email</label>
                    <input class="text-light" type="text" name="email" id="email" placeholder="Email"
                        value="<%= email %>" disabled />
                </div>

                <!-- Phone Number Input -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="phoneNumber">Phone number</label>
                    <input class="text-light" type="text" name="phoneNumber" id="phoneNumber" placeholder="Phone Number"
                        value="<%= phoneNumber %>" disabled />
                </div>

                <!-- Gender Select -->
                <div class="mb-3 field">
                    <label class="text-light me-3" for="gender">Gender</label>
                    <select class="form-select mb-3" id="gender" aria-label="Default select example" style="width: 45%;"
                        disabled>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>

                <!-- Form Buttons -->
                <div class="buttons">
                    <a id="logoutBtn" class="btn btn-secondary mb-2 p-2" href="/auth/logout">Logout</a>
                    <button type="submit" id="editBtn" class="btn btn-warning mb-2">Edit</button>
                </div>

                <!-- Forgot Password -->
                <div class="text-center"><a href="/auth/login" class="text-decoration-none text-light">Forgot
                        password?</a></div>
            </form>

        </div>
    </div>
    <script src="/javascripts/dashboard.js"></script>
</body>

</html> 