<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        crossorigin="anonymous" />
    <!-- my css -->
    <link rel="stylesheet" href="/styles/register.css">
</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center">

        <div class="form-container p-4 col-12 col-sm-8 col-lg-6">
            
            <form id="form" action="/auth/register" method="POST">
                <!-- form title -->
                <div class="mb-4 text-light text-center title">SignUp</div>

                <!-- First Name Input -->
                <div class="mb-3">
                    <i class="fas fa-user"></i>
                    <input type="text" name="firstName" id="firstName" placeholder="First Name" />
                </div>

                <!-- Last Name Input -->
                <div class="mb-3">
                    <i class="fas fa-user"></i>
                    <input type="text" name="lastName" id="lastName" placeholder="Last Name" />
                </div>

                <!-- Username Input -->
                <div class="mb-3">
                    <i class="fas fa-user-circle"></i>
                    <input type="text" name="username" id="username" placeholder="Username" />
                </div>

                <!-- Email Input -->
                <div class="mb-3">
                    <i class="far fa-envelope"></i>
                    <input type="email" name="email" id="email" placeholder="Email" />
                </div>

                <!-- Phone Number Input -->
                <div class="mb-3">
                    <i class="fas fa-phone"></i>
                    <input type="text" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" />
                </div>

                <!-- Password Input -->
                <div class="mb-3">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" id="password" placeholder="Password" />
                </div>

                <!-- Confirm Password Input -->
                <div class="mb-3">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" />
                </div>

                <!-- Gender Select -->
                <select class="form-select mb-3" name="gender" id="gender" aria-label="Default select example">
                    <option selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>

                <div id="msg" class="text-center text-light"> <%= msg %></div>

                <button type="submit" id="submit" class="btn btn-primary mb-2 w-100">Submit</button>
                <!-- login page link -->
                <div class="text-center"><a href="/auth/login" class="text-decoration-none text-light">Already
                        Have an Account?</a></div>
            </form>

        </div>

    </div>

    <!-- <script src="/javascripts/validation.js"></script> -->
</body>

</html>